<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <AutoCompleteTextView
            android:id="@+id/new_lesson_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Урок"
            android:completionHint="Введіть урок"
            android:completionThreshold="1"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_number_room"
            android:inputType="text"
            android:hint="Кабінет"
            android:layout_marginRight="@dimen/general_margin"
            android:layout_marginLeft="@dimen/general_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/dialog_text_size"
                android:text="Кількість:"
                android:layout_margin="@dimen/general_margin"/>

            <Spinner
                android:id="@+id/spenner_number_lesson"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/general_margin"
                android:layout_marginTop="@dimen/general_margin"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/cb_is_empty"
                android:layout_gravity="right"
                android:text="Пустий урок"
                android:layout_margin="@dimen/general_margin"
                android:textSize="@dimen/dialog_text_size"/>

        </LinearLayout>


    </LinearLayout>
