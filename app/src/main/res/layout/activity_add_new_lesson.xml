<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title_add_lsn_dialog"
            android:textSize="@dimen/title_text_size"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:layout_margin="@dimen/general_margin"/>

        <AutoCompleteTextView
            android:id="@+id/new_lesson_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="Урок"
            android:textColor="@color/note_list_text"
            android:textColorHint="@color/hint_enter_note"
            android:completionHint="Введіть урок"
            android:completionThreshold="1"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_number_room"
            android:inputType="text"
            android:hint="Кабінет"
            android:textColor="@color/note_list_text"
            android:textColorHint="@color/hint_enter_note"
            android:layout_marginRight="@dimen/general_margin"
            android:layout_marginLeft="@dimen/general_margin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_text_count"
                android:textSize="@dimen/dialog_text_size"
                android:text="Кількість:"
                android:textColor="@color/note_list_text"
                android:layout_margin="@dimen/general_margin"/>

            <Spinner
                android:id="@+id/spenner_number_lesson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/general_margin"
                android:layout_marginTop="@dimen/general_margin"
                android:textColor="@color/note_list_text"
                android:entries="@array/spinner_array_labels"/>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cb_is_empty"
                android:textColor="@color/note_list_text"
                android:layout_gravity="right"
                android:text="Пустий урок"
                android:layout_margin="@dimen/general_margin"
                android:textSize="@dimen/dialog_text_size"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/general_margin"
            android:layout_marginRight="@dimen/general_margin"
            android:weightSum="2">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_add"
                android:text="@string/btn_add"
                android:textSize="@dimen/h2_text_size"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="@dimen/general_margin"
                android:layout_marginLeft="@dimen/general_margin"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_cancel"
                android:text="@string/btn_cancel"
                android:textSize="@dimen/h2_text_size"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_marginRight="@dimen/general_margin"
                android:layout_marginLeft="@dimen/general_margin"
                android:layout_marginBottom="@dimen/dimen_10"
                android:layout_weight="1"/>



         </LinearLayout>



    </LinearLayout>
